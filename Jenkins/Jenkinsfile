pipeline {
        agent none
        environment {
                  Build_stage = "yes"
                }
          stages {
                stage('slave2 Build') { 
                        agent {
                  label 'slave2'
                }
                    steps{
                          sh 'sleep 5'
                        
                        }
                }                    
                   
                stage('slave1 Test') { 
                        environment {
                          Depoly_To = "yes"
                        }
                        agent {
                  label 'slave1'
                }
                     steps{
                           sh 'sleep 5'
                        
                        }
                     }
                stage('Master deploy') { 
                        
                    agent {
                  label 'Master'
                }
                     steps{
                           sh 'sleep 5'
                           // echo "{$Depoly_To}"
                           echo "{$Build_stage}"  
                        }
                   
                    }
            }
    }
